<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:emojicon="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/_6dp"
    android:layout_marginBottom="@dimen/_6dp"
    android:layout_marginStart="@dimen/_12dp"
    android:layout_marginEnd="100dp"
    android:gravity="center_vertical"
    android:id="@+id/frame_item_chat">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginEnd="@dimen/_12dp"
        app:shapeAppearanceOverlay="@style/cornerImageView"
        />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_corner_grey_100_round_20"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp">

        <hani.momanii.supernova_emoji_library.Helper.EmojiconTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            emojicon:emojiconSize="30sp"
            android:textColor="@color/black"
            android:paddingStart="@dimen/_12dp"
            android:paddingEnd="@dimen/_12dp"
            android:paddingTop="@dimen/_6dp"
            android:paddingBottom="@dimen/_6dp"
            />

        <com.example.messenger.CustomView.DynamicImageView
            android:id="@+id/image"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/message"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:longClickable="true"
            android:scaleType="fitCenter" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/file_attached_icon"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:longClickable="true"
                android:visibility="gone"
                android:src="@drawable/file_attached"
                android:contentDescription="@string/file_icon"/>

            <TextView
                android:id="@+id/fileSaved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:longClickable="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/file_attached_icon" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
